{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/mobile-apis/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/mobile-apis/tsconfig.app.json"
  },
  "projects": {
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "mobile-apis": {
      "type": "application",
      "root": "apps/mobile-apis",
      "entryFile": "main",
      "sourceRoot": "apps/mobile-apis/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mobile-apis/tsconfig.app.json"
      }
    },
    "repositories": {
      "type": "library",
      "root": "libs/repositories",
      "entryFile": "index",
      "sourceRoot": "libs/repositories/src",
      "compilerOptions": {
        "tsConfigPath": "libs/repositories/tsconfig.lib.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/mobile-apis"
}
